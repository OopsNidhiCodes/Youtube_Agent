# OpenAI API Key for content generation
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI API Key for image generation (optional)
STABILITY_API_KEY=your_stability_api_key_here

# YouTube API Credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# Configuration
VIDEO_UPLOAD_TIME=09:00  # Time to upload videos (24-hour format)
VIDEO_TOPIC=technology     # Main topic for videos
VIDEO_LENGTH=60          # Video length in seconds
UPLOAD_SCHEDULE=daily    # daily, weekly, or monthly

# File paths
OUTPUT_DIR=./output
TEMP_DIR=./temp
LOG_LEVEL=INFO